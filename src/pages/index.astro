---
import Layout from "@/layouts/BaseLayout.astro";

import Experience from "@/components/Experience.astro";
import Projects from "@/components/Projects.astro";
import Education from "@/components/Education.astro";
import Certificates from "@/components/Certificates.astro";
import Hero from "@/components/Hero.astro";
import SectionContainer from "@/components/SectionContainer.astro";

import ExperienceIcon from "@/icons/Experience.astro";
import ProjectIcon from "@/icons/Project.astro";
import EducationIcon from "@/icons/Education.astro";

const title = "Portfolio de Alberto Castañeiras Folgueral - Software Engineer";
const description = "Contrata a Alberto Castañeiras Folgueral";
---

<Layout title={title} description={description}>
  <main>
    <!-- <SectionContainer id="hero" class="max-w-[1400px] py-12 md:py-32">
      <Hero />
    </SectionContainer> -->

    {/* Experience */}
    <section id="experience" class="py-24 px-6 bg-card/30">
      <div class="max-w-6xl mx-auto">
        <div class="mb-16">
          <h2 class="text-3xl font-bold flex items-center gap-x-4 mb-4">
            <ExperienceIcon class="size-6" />
            Experiencia
          </h2>
        </div>
        <Experience />
      </div>
    </section>

    {/* Projects */}
    <section id="projects" class="pb-24 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="mb-16">
          <h2 class="text-3xl font-bold flex items-center gap-x-4 mb-4">
            <ProjectIcon class="size-6" />
            Proyectos
          </h2>
          <p class="text-muted-foreground max-w-2xl">
            Una selección de proyectos que demuestran mi experiencia en
            desarrollo full-stack y diseño de interfaces de usuario.
          </p>
        </div>
        <Projects />
      </div>
    </section>

    {/* Education & Certification */}
    <section id="education" class="pb-24 px-6">
      <div class="max-w-6xl mx-auto">
        <div class="mb-16">
          <h2 class="text-3xl font-bold flex items-center gap-x-4 mb-4">
            <EducationIcon class="size-6" />
            Educación y certificados
          </h2>
          <p class="text-muted-foreground max-w-2xl">
            Formación académica completada y credenciales en proceso para seguir
            ampliando mis conocimientos.
          </p>
        </div>
        <div class="grid gap-12 lg:grid-cols-2">
          <div>
            <h3 class="mb-6 text-lg font-semibold text-foreground">Educación</h3>
            <Education />
          </div>
          <div>
            <h3 class="mb-6 text-lg font-semibold text-foreground">Certificaciones</h3>
            <Certificates />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
