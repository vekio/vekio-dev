---
import Education from "@/components/Education.astro";
import Certificates from "@/components/Certificates.astro";

import QualificationIcon from "@/icons/Qualification.astro";
---

<section id="education" class="pb-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="mb-16">
      <h2 class="text-3xl font-bold flex items-center gap-x-4 mb-4">
        <QualificationIcon class="size-8" />
        Formación
      </h2>
      <p class="text-muted-foreground max-w-2xl">
        Formación académica completada y credenciales en proceso para seguir
        ampliando mis conocimientos.
      </p>
    </div>
    <div class="grid gap-12 lg:grid-cols-2">
      <div>
        <h3 class="mb-6 text-lg font-semibold text-foreground">Estudios</h3>
        <Education />
      </div>
      <div>
        <h3 class="mb-6 text-lg font-semibold text-foreground">
          Certificaciones
        </h3>
        <Certificates />
      </div>
    </div>
  </div>
</section>
