---
const PROJECTS = [
  {
    title: "Project 1 - components on top of Tailwind CSS",
    description: "Descripcion simple para el proyecto",
    link: "https://flowbite.com/",
    github: "https://github.com/themesberg",
    image: "/projects/svgl.webp",
    tags: ["HTML", "Tailwind CSS"],
  },
];
---

{
  PROJECTS.map((project) => (
    <article>
      <h3>{project.title}</h3>
      <p>{project.description}</p>
      <ul>
        {project.tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img
        src={project.image}
        alt={`Captura de pantalla del proyecto ${project.image}`}
      />
    </article>
  ))
}
