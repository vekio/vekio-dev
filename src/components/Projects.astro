---
import { TAGS, type ProjectTag } from "@/data/projectTags";

import ProjectItem from "@/components/ProjectItem.astro";

import ProjectIcon from "@/icons/Project.astro";

interface Project {
  title: string;
  description: string;
  image: string;
  tags: ProjectTag[];
  github: string;
  link?: string;
}

const PROJECTS: Project[] = [
  {
    title: "Cutter",
    description:
      "✂️ A simple, fast URL shortener built with Go, HTMX and SQLite",
    github: "https://github.com/vekio/cutter",
    image: "/projects/1.webp",
    tags: [TAGS.GO, TAGS.TEMPL, TAGS.HTMX, TAGS.TAILWINDCSS],
  },
];
---

<section id="projects" class="pb-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="mb-16">
      <h2 class="text-3xl font-bold flex items-center gap-x-4 mb-4">
        <ProjectIcon class="size-6" />
        Proyectos
      </h2>
      <p class="text-muted-foreground max-w-2xl">
        Una selección de proyectos que demuestran mi experiencia en desarrollo
        full-stack y diseño de interfaces de usuario.
      </p>
    </div>
    <div class="grid gap-8 lg:grid-cols-2">
      {PROJECTS.map((project) => <ProjectItem {...project} />)}
    </div>
  </div>
</section>
