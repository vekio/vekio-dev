---
const EDUCATION = [
  {
    date: "2015 – 2019",
    degree: "Grado en Ingeniería Informática",
    institution: "Universidad de León",
    description:
      "Especializado en desarrollo de software y diseño de interfaces, con proyectos centrados en aplicaciones web modernas.",
  },
];
---

<ol class="space-y-6">
  {
    EDUCATION.map((edu) => (
      <li class="rounded-xl border border-border bg-card/40 p-6 shadow-sm transition-colors hover:border-primary/40 hover:bg-card/60">
        <div class="flex items-start justify-between flex-wrap gap-4">
          <h3 class="text-lg font-semibold text-foreground">{edu.degree}</h3>
          <time class="text-sm font-medium text-muted-foreground">
            {edu.date}
          </time>
        </div>
        <p class="mt-2 text-sm text-muted-foreground">{edu.institution}</p>
        <p class="mt-4 text-muted-foreground leading-relaxed">
          {edu.description}
        </p>
      </li>
    ))
  }
</ol>
