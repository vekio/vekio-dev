---
import { Image } from "astro:assets";

import { primaryEmail, SOCIAL_LINKS } from "@/data/socials";
// import resume from "@resume";

import Social from "@/components/Social.astro";
import MapIcon from "@/icons/Map.astro";
import MailIcon from "@/icons/Mail.astro";
import ArrowRightIcon from "@/icons/ArrowRight.astro";

import cvImage from "@/assets/portfolio.jpg";

// const heroName = resume?.basics?.name ?? "Alberto Casta√±eiras";
---

<section
  id="hero"
  class="px-6 py-16 md:py-24 lg:flex lg:min-h-screen lg:items-center lg:justify-center"
>
  <div
    class="mx-auto grid max-w-6xl items-start gap-12 md:gap-16 lg:grid-cols-[minmax(0,1.35fr)_minmax(0,0.65fr)]"
  >
    <div class="space-y-8">
      <div class="space-y-3">
        <h1 class="text-5xl font-bold text-balance lg:text-7xl">
          üëã <span class="shimmer-text">Hey, I'm Alberto</span>
        </h1>
        <div class="flex flex-wrap items-center gap-3">
          <p class="text-xl text-muted-foreground lg:text-2xl">
            <strong>Backend-focused</strong> Software Engineer
          </p>
        </div>
      </div>

      <div
        class="max-w-lg space-y-4 text-lg leading-relaxed text-muted-foreground"
      >
        <p>
          üí™üèº Good design, clean code, and scalable systems.<br />
          Strong in <strong>.NET</strong>, passionate about <strong>Go</strong>,
          <strong>DevOps</strong>, and self-hosting. I also have experience with
          <strong>Angular</strong> and <strong>BI with Qlik Sense</strong>,
          giving me a full-stack perspective when needed.<br />
          I experiment (and break things) in my <strong>homelab</strong> to understand
          how systems really work.
        </p>

        <p>
          Open to collaborating on interesting backend/infra projects or
          discussing new opportunities.
        </p>
      </div>

      <div class="flex flex-wrap gap-3">
        <a
          href={`mailto:${primaryEmail}`}
          class="inline-flex items-center justify-center gap-2 rounded-md bg-primary px-6 py-3 text-base font-semibold text-primary-foreground transition-colors hover:bg-primary/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary/60 focus-visible:ring-offset-2"
        >
          Contact
        </a>
        <a
          href="/#projects"
          class="inline-flex items-center justify-center gap-2 rounded-md border border-border bg-secondary px-6 py-3 text-base font-semibold text-secondary-foreground transition-colors hover:bg-secondary/80 focus:outline-none focus-visible:ring-2 focus-visible:ring-border focus-visible:ring-offset-2"
        >
          View Projects
          <ArrowRightIcon class="size-4" />
        </a>
      </div>

      <div class="flex flex-wrap items-center gap-3 pt-4">
        {SOCIAL_LINKS.map((social) => <Social {...social} />)}
      </div>
    </div>

    <div class="hidden lg:flex justify-end">
      <div class="group relative rotate-3">
        <div
          class="absolute -inset-1 rounded-2xl bg-gradient-to-r from-primary/50 to-primary/20 opacity-75 blur-xl transition duration-500 group-hover:opacity-100"
        >
        </div>
        <div
          class="relative rounded-2xl border border-border bg-card p-4 shadow-2xl"
        >
          <div
            class="aspect-[3/4] w-[14.5rem] overflow-hidden rounded-xl xl:w-[16.75rem]"
          >
            <Image
              src={cvImage}
              alt={`Curr√≠culum de Alberto Casta√±eiras`}
              class="h-full w-full object-cover"
              loading="lazy"
              decoding="async"
              format="webp"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
