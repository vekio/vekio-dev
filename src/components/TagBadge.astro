---
import { type TagDefinition } from "@/data/projectTags";

interface Props {
  tag: TagDefinition;
  size?: "sm" | "md" | "lg";
}

const sizeClasses = {
  sm: "px-2 py-1 text-[10px]",
  md: "px-3 py-1 text-[11px]",
  lg: "px-3.5 py-1.5 text-[12px]",
};

const iconSizes = {
  sm: "size-4",
  md: "size-6",
  lg: "size-8",
};

const { tag, size = "md" } = Astro.props;
---

<span
  class={`inline-flex items-center gap-2 rounded-full font-semibold tracking-[0.08em] ${sizeClasses[size]} ${tag.class}`}
>
  {tag.icon && <tag.icon class={iconSizes[size]} />}

  <span class={`whitespace-nowrap`}>{tag.label}</span>
</span>
