---
import { TAGS, type ProjectTag } from "@/data/projectTags";

import Badge from "@/components/Badge.astro";

import StackIcon from "@/icons/Stack.astro";

interface StackSection {
  title: string;
  description?: string;
  tags: ProjectTag[];
}

const STACK_SECTIONS: StackSection[] = [
  {
    title: "Frontend & UI",
    tags: [TAGS.TAILWINDCSS, TAGS.HTMX],
  },
  {
    title: "Backend & Datos",
    tags: [TAGS.GO],
  },
  {
    title: "DevOps & Tooling",
    tags: [],
  },
];
---

<section id="stack" class="pb-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="mb-16">
      <h2 class="text-3xl font-bold flex items-center gap-x-4 mb-4">
        <StackIcon class="size-6" />
        Stack
      </h2>
      <p class="text-muted-foreground max-w-2xl">
        Tecnolog√≠a con la que construyo productos end-to-end, desde el prototipo
        hasta el despliegue y la observabilidad.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2">
      {
        STACK_SECTIONS.map((section) => (
          <article class="rounded-xl border border-border/60 bg-card/40 p-6 shadow-sm transition-colors hover:border-primary/40 hover:bg-card/60">
            <h3 class="text-lg font-semibold text-foreground">
              {section.title}
            </h3>

            {section.description && (
              <p class="mt-2 text-sm text-muted-foreground">
                {section.description}
              </p>
            )}

            {section.tags.length > 0 && (
              <ul class="mt-4 flex flex-wrap gap-2">
                {section.tags.map((tag) => (
                  <li>
                    <Badge tag={tag} size="lg" />
                  </li>
                ))}
              </ul>
            )}
          </article>
        ))
      }
    </div>
  </div>
</section>
