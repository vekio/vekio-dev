---
interface Props {
  title: string;
  date: string;
  institution: string;
  description: string;
}

const { title, date, institution, description } = Astro.props as Props;
---

<li class="rounded-xl border border-border bg-card/40 p-6 shadow-sm transition-colors hover:border-primary/40 hover:bg-card/60">
  <div class="flex items-start justify-between gap-4">
    <h3 class="text-lg font-semibold text-foreground">{title}</h3>
    <time class="text-sm font-medium text-muted-foreground">{date}</time>
  </div>
  <p class="mt-2 text-sm text-muted-foreground">{institution}</p>
  <p class="mt-4 text-muted-foreground leading-relaxed">{description}</p>
</li>
